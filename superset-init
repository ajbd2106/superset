version: '2.2'
services:
    postgres:
        image: postgres:11.5
        container_name: dsi-presto-analytics-meta
        environment:
            - POSTGRES_USER=superset
            - POSTGRES_PASSWORD=dubl1n
            - POSTGRES_DB=superset
        volumes:
            - /app/vols/dsi-presto-analytics-meta:/var/lib/postgresql/data       # <-- maps postgres data storage area to persistent filesystem
        ports:
            - "5434:5432"
